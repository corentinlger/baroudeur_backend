@model baroudeurs.Models.User

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>User</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Username)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Username)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.AccountCreation)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AccountCreation)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.LastConnection)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LastConnection)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IsOnline)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IsOnline)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Discoveries)
        </dt>
        <dd class = "col-sm-10">
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            Name
                        </th>
                        <th>
                            Description
                        </th>
                        <th>
                            Time of discovery
                        </th>
                    </tr>
                </thead>
                @foreach (var item in Model.Discoveries)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Point.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Point.Description)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TimeOfDiscovery)
                        </td> 
                    </tr>
                }
            </table>
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
